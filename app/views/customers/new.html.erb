<% provide(:title, 'Customers') %>
<h1><%= yield(:title) %> </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |f| %>
        <%= render 'shared/error_messages' %>

        <%=  f.label "Customer ID" %>
        <%=  f.text_field :cust_id %>

        <%= f.label :name %>
        <%= f.text_field :name %>

       <%= f.submit "Create customer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>