<% provide(:title, @customer.name) %>
<h1>Update Customer</h1>

<div class="row">
  <aside class="span4">
    <section>
      <p>
        Customer ID: <%= @customer.cust_id %> <br>
        Name: <%= @customer.name %>
      </p>
    </section>
  </aside>
</div>

<div class="btn-group" role="group" aria-label="...">
  <%= button_to "Edit", edit_customer_path(@customer), class: "btn btn-sm btn-primary"%>
  <%= button_to "Delete", customer_path(@customer), method: :delete, data: { confirm: "Delete customer?" }, class: "btn btn-sm btn-primary"%>
</div>