<p id="notice"><%= notice %></p>

<h1>Listing Pms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pms.each do |pm| %>
      <tr>
        <td><%= pm.name %></td>
        <td><%= pm.email %></td>
        <% if pm.user_id == nil %>
            <td></td>
        <% else %>
            <td><%= pm.user_id %> <%= pm.user.name %></td>
        <% end %>
        <td><%= link_to 'Show', pm %></td>
        <td><%= link_to 'Edit', edit_pm_path(pm) %></td>
        <td><%= link_to 'Destroy', pm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

